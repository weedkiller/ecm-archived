                <a href="@Url.Content("~/PassDLGSupreme")"><img src="@Url.Content("~/Assets/Front/img/header_footer/icon-gift-card_2.png")" /></a>
                <a href="@Url.Content("~/DLGCard")"><img src="@Url.Content("~/Assets/Front/img/header_footer/icon-gift-card_3.png")" /></a>
