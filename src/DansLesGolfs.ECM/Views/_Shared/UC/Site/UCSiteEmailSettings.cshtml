        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Netmessage Settings
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-4 control-label">
                            <label for="IsUseGlobalNetmessageSettings">@Resources.UseGlobalSettings</label>
                        </div>
                        <div class="col-md-8">
                            <label for="IsUseGlobalNetmessageSettings"><input type="checkbox" id="IsUseGlobalNetmessageSettings" name="IsUseGlobalNetmessageSettings" value="true" @(DataManager.ToBoolean((object)ViewBag.IsUseGlobalNetmessageSettings) ? " checked=\"checked\"" : "") /></label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-4 control-label">
                            <label for="NetmessageFTPUsername">FTP Username</label>
                        </div>
                        <div class="col-md-8">
                            @Html.TextBox("NetmessageFTPUsername", (string)ViewBag.NetmessageFTPUsername, new { maxlength = 255, @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-4 control-label">
                            <label for="NetmessageFTPPassword">FTP Password</label>
                        </div>
                        <div class="col-md-8">
                            @Html.Password("NetmessageFTPPassword", (string)ViewBag.NetmessageFTPPassword, new { maxlength = 255, @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-4 control-label">
                            <label for="NetmessageAccountName">@Resources.AccountName</label>
                        </div>
                        <div class="col-md-8">
                            @Html.TextBox("NetmessageAccountName", (string)ViewBag.NetmessageAccountName, new { maxlength = 255, @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
