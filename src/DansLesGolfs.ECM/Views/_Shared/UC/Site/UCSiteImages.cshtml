@using DansLesGolfs.Base
@{
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    @Resources.SiteImages
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <p>@Resources.ItemImageUploadDescription</p>
                        <input type="file" accept="image/*" id="site-image-file" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <ul id="site-images-area" class="sortable-images"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
