@{
    Layout = "~/Views/_Shared/MP/_Reseller.cshtml";
}
@section head
{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Assets/Libraries/uploadifive/uploadifive.css")" />
}
@section foot
{
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
    <script>
        window.siteId = '@ViewBag.id';
        window.itemTypeId = '@ViewBag.id';
        window.latitude = '@ViewBag.Latitude';
        window.longitude = '@ViewBag.Longitude';
        window.defaultLatitude = '@ViewBag.DefaultLatitude';
        window.defaultLongitude = '@ViewBag.DefaultLongitude';
    </script>
    <script src="@Url.Content("~/Assets/Libraries/uploadifive/jquery.uploadifive.min.js")"></script>
    <script src="@Url.Content("~/Assets/Libraries/tinymce/tinymce.min.js")"></script>
    <script src="@Url.Content("~/Assets/Reseller/scripts/page/site.js")"></script>
    <script src="@Url.Content("~/Assets/Reseller/scripts/page/site-map.js")"></script>
}
<form method="post" id="form-@ViewBag.ClassName" class="info-form" enctype="multipart/form-data">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#site-info" data-toggle="tab">@Resources.SiteInformation</a></li>
        <li><a href="#site-practical-info" data-toggle="tab">@Resources.PracticalInfo</a></li>
        <li><a href="#site-accommondation" data-toggle="tab">@Resources.Accommodation</a></li>
        <li><a href="#site-restaurant" data-toggle="tab">@Resources.Restaurant</a></li>
        <li><a href="#site-images" data-toggle="tab">@Resources.SiteImages</a></li>
        <li><a href="#site-map" data-toggle="tab">@Resources.Map</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="site-info">@Html.Partial("~/Views/_Shared/UC/Reseller/Site/UCSiteInfo.cshtml")</div>
        <div class="tab-pane" id="site-practical-info">@Html.Partial("~/Views/_Shared/UC/Reseller/Site/UCSitePracticalInfo.cshtml")</div>
        <div class="tab-pane" id="site-accommondation">@Html.Partial("~/Views/_Shared/UC/Reseller/Site/UCSiteAccommodation.cshtml")</div>
        <div class="tab-pane" id="site-restaurant">@Html.Partial("~/Views/_Shared/UC/Reseller/Site/UCSiteRestaurant.cshtml")</div>
        <div class="tab-pane" id="site-images">@Html.Partial("~/Views/_Shared/UC/Reseller/Site/UCSiteImages.cshtml")</div>
        <div class="tab-pane" id="site-map">@Html.Partial("~/Views/_Shared/UC/Reseller/Site/UCMap.cshtml")</div>
    </div>
    <input type="hidden" name="id" value="@ViewBag.id" />
    <div class="action-buttons">
        <input type="submit" id="submit" name="submit" value="@Resources.Save" class="btn btn-primary" />
        <input type="reset" id="reset" name="reset" value="@Resources.Reset" class="btn" />
        <a href="@Url.Content("~/Reseller/Site")" class="btn btn-default">@Resources.Back</a>
    </div>
</form>