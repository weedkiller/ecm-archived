@using DansLesGolfs.Base
@{
}
<div class="row">
    <div class="col-md-12">
        @if (DataManager.ToInt((object)ViewBag.id) <= 0)
        {
            <p>@Html.T("Please save product first.")</p>
        }
        else
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        @Html.T("Product Images")
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p>@Resources.ItemImageUploadDescription</p>
                            <input type="file" accept="image/*" id="product-image-file" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <ul id="product-images-area" class="sortable-images"></ul>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
