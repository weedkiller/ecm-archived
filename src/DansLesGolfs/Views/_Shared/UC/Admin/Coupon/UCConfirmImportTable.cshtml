@using DansLesGolfs.Base
@using DansLesGolfs.BLL
@model List<Coupon>
@{
}
<div id="confirm-import-coupon-content">
    <div class="row">
        <div class="col-md-6">
            <span class="label label-success">
                <span class="glyphicon glyphicon-ok"></span> @Resources.Available
                @ViewBag.Pass
            </span>
            <span class="label label-danger">
                <span class="glyphicon glyphicon-remove"></span>
                @Resources.NotAvailable : @ViewBag.NotPass
            </span>
        </div>
    </div>
    <table id="confirm-import-coupons-table" class="table table-striped table-bordered table-responsive">
        <thead>
            <tr>
                <th class="column-coupon-code">@Resources.CouponCode</th>
                <th class="column-status">@Resources.Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Coupon coupon in Model)
            {
                <tr class="coupon-@coupon.CouponId @(coupon.IsAvailable ? "success" : "danger")" data-id="@coupon.CouponId">
                    <td class="column-coupon-code">
                        @coupon.CouponCode
                    </td>
                    <td class="column-status">
                        @(coupon.IsAvailable ? Resources.Available : Resources.NotAvailable)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>