@using DansLesGolfs.Base
@using DansLesGolfs.BLL
@using System.Globalization
@{
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    @Resources.Restaurant
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-2 control-label">
                            <label for="Restaurant">@Resources.Restaurant</label>
                        </div>
                        <div class="col-md-10">
                            @Html.TextAreaLang("Restaurant", (List<SiteLang>)ViewBag.SiteLangs, "Restaurant", new { rows = 20, @class = "form-control editor" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>